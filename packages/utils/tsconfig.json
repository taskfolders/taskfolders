{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",

    "target": "es2020",
    //"moduleResolution": "node",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": false,

    "allowJs": true,
    "checkJs": true,

    "lib": ["es2020"],
    // "module": "commonjs",
    //"module": "NodeNext",

    // WHY otherwise empty default import
    //  import Path from 'path'
    //  import * as Path from 'path'
    //
    "esModuleInterop": true,

    "strict": false,
    // 17 "strictNullChecks": true,
    // 37 "noImplicitAny": true,

    //"noImplicitOverride": true,
    // Needed for CommonJS modules: markdown-it, fs-extra

    // "typeRoots": [
    //   "node_modules/@types",
    //   "node_modules/@taskfolders/core/typings"
    // ],

    "sourceMap": true,

    // TODO review
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true // enables importers to jump to source
  }
}
